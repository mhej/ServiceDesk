@using ServiceDesk.Utilities
@model ServiceDesk.Models.ViewModels.AdminUsersViewModel
@{
    ViewData["Title"] = "Create a new user";
}

<body>


    <form method="post" asp-action="Create">
        <div class="p-3 mt-3 border rounded">
            <div class="h8 py-2 text-uppercase">Enter user details:</div>

            <input type="hidden" asp-for="ApplicationUser.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ApplicationUser.Name"></label>
                </div>
                <div class="col-5">
                    <input asp-for="ApplicationUser.Name" class="form-control" />
                </div>
                <span asp-validation-for="ApplicationUser.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ApplicationUser.Email"></label>
                </div>
                <div class="col-5">
                    <input asp-for="ApplicationUser.Email" class="form-control" required />
                </div>
                <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ApplicationUser.PhoneNumber"></label>
                </div>
                <div class="col-5">
                    <input asp-for="ApplicationUser.PhoneNumber" class="form-control" />
                </div>
                <span asp-validation-for="ApplicationUser.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="col-2 control-label">Role</label>
                <div class="col-3">
                    <select asp-for="ApplicationUserRole" asp-items="@new SelectList(Enum.GetNames(typeof(ApplicationUserRoles)))" class="form-control"></select>
                </div>
            </div>









            <br />
            <div class="form-group">
                <div class="btn-group" role="group">
                    <input type="submit" class="btn btn-outline-success" value="Submit" />
                    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
                </div>
            </div>
        </div>
    </form>

</body>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
