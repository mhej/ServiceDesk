@model ServiceDesk.Models.Request



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Submit request</title>
</head>
<body>


    <form method="post" enctype="multipart/form-data" asp-action="Create">
        <div class="p-3 mt-3 border rounded">
            <div class="h8 py-2 text-uppercase">Describe your problem or request:</div>

            @* <input asp-for="@Model.Id" readonly/>*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="@Model.Title"></label>
                </div>
                <div class="col-5">
                    <input asp-for="@Model.Title" class="form-control" />
                </div>
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="@Model.Content">Description</label>
                </div>
                <div class="col-5">
                    <textarea asp-for="@Model.Content" class="form-control" rows="8"></textarea>
                </div>
                <span asp-validation-for="@Model.Content" class="text-danger"></span>
            </div>



            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="@Model.Image.Name">Screenshot</label>
                </div>
                <div class="input-group col-5">
                    <div class="custom-file">
                        <input type="file" name="files" class="custom-file-input" id="inputGroupFile" />
                        <label class="custom-file-label" for="inputGroupFile">Choose file</label>
                    </div>
                </div>
            </div>






            <br />
            <div class="form-group">
                <div class="btn-group" role="group">
                    <input type="submit" class="btn btn-outline-success" value="Submit" />
                    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
                </div>
            </div>
        </div>
    </form>


    @section Scripts{

        <script>

            $(".custom-file-input").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            });
        </script>



        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }




</body>
</html>
